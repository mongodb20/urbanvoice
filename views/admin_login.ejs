<%- include('partials/header', { title: 'Admin Login' }) %>

<div class="auth-container">
    <div class="auth-wrapper">
        <div class="form-header">
            <h2><span class="logo">üõ°Ô∏è</span>Admin Login</h2>
            <p>Urban Voice Administration</p>
        </div>

        <% if (message) { %>
            <div class="message"><%= message %></div>
        <% } %>

        <form action="/admin/login" method="POST">
            <div class="form-group">
                <label for="adminId">Admin ID</label>
                <input type="text" id="adminId" name="adminId" required value="admin">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required value="admin123">
            </div>
            <div class="form-group captcha-group">
                <input type="text" name="captcha" placeholder="Enter CAPTCHA" required>
                <img src="/captcha" onclick="this.src='/captcha?'+Math.random()" alt="CAPTCHA">
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
            <div class="form-actions" style="margin-top: 1rem; justify-content: center;">
                 <a href="/">Return to Citizen Login</a>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>