<%- include('partials/header', { title: 'Welcome to Urban Voice' }) %>

<div class="auth-container">
    <div class="auth-wrapper">
        <div class="form-header">
            <h2><span class="logo">üèôÔ∏è</span>Urban Voice</h2>
            <p>Your platform for a better city.</p>
        </div>

        <% if (message) { %>
            <div class="message"><%= message %></div>
        <% } %>

        <div id="login-form" class="auth-form active">
            <h3>Citizen Login</h3>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="login-phone">Phone Number</label>
                    <input type="tel" id="login-phone" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" name="password" required>
                </div>
                <div class="form-group captcha-group">
                    <input type="text" name="captcha" placeholder="Enter CAPTCHA" required>
                    <img src="/captcha" onclick="this.src='/captcha?'+Math.random()" alt="CAPTCHA">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
                <div class="form-actions">
                    <a href="#" class="show-forgot">Forgot Password?</a>
                    <a href="/admin/login">Admin Login</a>
                </div>
            </form>
            <div class="auth-toggle">
                Don't have an account? <a href="#" class="show-register">Register Now</a>
            </div>
        </div>

        <div id="register-form" class="auth-form">
            <h3>Citizen Registration</h3>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="reg-name">Full Name</label>
                    <input type="text" id="reg-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="reg-phone">Phone Number</label>
                    <input type="tel" id="reg-phone" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="reg-password">Password</label>
                    <input type="password" id="reg-password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="reg-confirm-password">Confirm Password</label>
                    <input type="password" id="reg-confirm-password" name="confirmPassword" required>
                </div>
                 <div class="form-group captcha-group">
                    <input type="text" name="captcha" placeholder="Enter CAPTCHA" required>
                    <img src="/captcha" onclick="this.src='/captcha?'+Math.random()" alt="CAPTCHA">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Register</button>
            </form>
            <div class="auth-toggle">
                Already have an account? <a href="#" class="show-login">Login</a>
            </div>
        </div>

        <div id="forgot-password-form" class="auth-form">
            <h3>Forgot Password</h3>
            <form id="forgot-password-form-el">
                <p>Enter your phone number to receive an OTP.</p>
                <div class="form-group">
                    <label for="forgot-phone">Phone Number</label>
                    <input type="tel" id="forgot-phone" name="phone" required>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Send OTP</button>
            </form>
            <form id="reset-password-form-el" style="display: none;">
                 <input type="hidden" name="phone" id="reset-phone-hidden">
                 <div class="form-group">
                    <label for="otp">OTP</label>
                    <input type="text" id="otp" name="otp" required>
                 </div>
                 <div class="form-group">
                    <label for="new-password">New Password</label>
                    <input type="password" id="new-password" name="newPassword" required>
                 </div>
                 <div class="form-group">
                    <label for="confirm-new-password">Confirm New Password</label>
                    <input type="password" id="confirm-new-password" name="confirmNewPassword" required>
                 </div>
                 <button type="submit" class="btn btn-primary" style="width: 100%;">Reset Password</button>
            </form>
            <div class="auth-toggle">
                Remember your password? <a href="#" class="show-login">Login</a>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>